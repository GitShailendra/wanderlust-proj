<% layout("/layouts/boilerPlate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
            <h3><%= listingId.title %></h3>
    </div>
    <div class="card col-6 offset-2 listing-card">
        <img src="<%= listingId.image.url %>" class="card-img-top show-img" alt="">
        <div class="card-body">
            <p class="card-text"> Owned by: <i><%= listingId.owner.username %></i> </p>   
            <p class="card-text">  <%= listingId.description %> </p>
            <p class="card-text"> â‚¹ <%= listingId.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listingId.location %> </p>
            <p class="card-text"><%= listingId.country %> </p>
            <p class="card-text"><b>Category</b>:<%= listingId.category %> </p>
            </p>
        </div>
    </div>
   
    <br>

    <% if(currUser && listingId.owner._id.equals(currUser._id)) { %>
    <div class="btns">
        <a href="/listings/<%= listingId._id %>/edit" class="btn btn-warning col-1 offset-2">Edit </a>
        <form action="/listings/<%= listingId._id %>/delete?_method=DELETE" method="post">
            <button class="btn btn-danger offset-4">delete</button>
        </form>
    </div>
    <% } %>
    <div class="col-8 offset-2 mb-3">
        <% if(currUser){ %>
        <hr>
        <h4>Leave a review</h4>
        <form action="/listings/<%=listingId._id %>/review" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                
                
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            </div>
            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    Please enter a comment for review
                </div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>
        <hr>
        <p><b>All reviews</b></p>
        <div class="row">
        <% for(review of listingId.reviews){ %>
            <div class="card col-5 mb-3 ms-3">
                <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %></h5>
                    <p class="card-text"><%= review.comment %></p>
                    
                    <p class="starability-result card-text" data-rating="<%= review.rating %>">
                        
                      </p>
                    <form action="/listings/<%=listingId._id %>/review/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
                    <% if(currUser && review.author._id.equals(currUser._id)) { %>  
                        <button class="btn btn-outline-danger">Delete</button>
                    <% } %>
                    </form>
                </div>
            </div>  
        <% } %>
        
    </div>
    </div>
</div>

